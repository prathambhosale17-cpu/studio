rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /users/{userId}/idCards/{cardId} {
      allow read: if isOwner(userId);

      allow create: if isOwner(userId)
                      && request.resource.data.id == cardId
                      && request.resource.data.userId == userId;

      allow update, delete: if isOwner(userId);
    }

    // This rule allows the ID verification feature to search all ID cards
    // across all users by using a collection group query.
    match /{path=**}/idCards/{cardId} {
      allow read: if isSignedIn();
    }
  }
}
