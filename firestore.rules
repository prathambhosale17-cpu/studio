rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /users/{userId}/idCards/{cardId} {
      // Allow READ, WRITE only if you are the owner.
      allow read, write: if isOwner(userId);

      // Allow GET if you are any signed-in user. This is crucial.
      // A collection group query first runs a 'list' and then 'get's the results.
      // The 'list' is handled by the collection group rule below.
      // This 'get' rule allows the client to read the documents returned by the query.
      allow get: if isSignedIn();
    }

    match /users/{userId}/aadhaarVerifications/{verificationId} {
        allow read, write: if isOwner(userId);
    }

    // This rule allows the ID verification feature to search all ID cards
    // across all users by using a collection group query.
    match /{path=**}/idCards/{cardId} {
      // A query requires 'list' permission. This rule grants it to any signed-in
      // user for the 'idCards' collection group.
      allow list: if isSignedIn();
    }
  }
}
